@model ForumProject.Models.ViewModel.Thread.ThreadViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Thread</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThreadName" class="control-label"></label>
                <input asp-for="ThreadName" class="form-control" />
                <span asp-validation-for="ThreadName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionId" class="control-label"></label>
                <select asp-for="SectionId" asp-items="Model.Section"></select>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-light" asp-action="Index" asp-route-id="@Model.SectionId">Back</a>
            </div>
        </form>
    </div>
</div>

