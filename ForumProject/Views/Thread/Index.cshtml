@model IEnumerable<DomainModel.Entity.Thread>

@{
    ViewBag.Title = ViewBag.Section;
    @*<link href="~/css/ForumList.css" rel="stylesheet" />*@
}


<div class="container-fluid mt-100">
    <h1>@ViewBag.Section</h1>
    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex flex-wrap justify-content-between">
            <div> <a asp-controller="Thread" asp-action="Create" asp-route-id="@ViewBag.SectionId" class="btn btn-shadow btn-wide btn-primary"><span class="btn-icon-wrapper pr-2 opacity-7"> <i class="fa fa-plus fa-w-20"></i> </span> New Thread</a> </div>
            @*<div class="col-12 col-md-3 p-0 mb-3"> <input type="text" class="form-control" placeholder="Search..."> </div>*@
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header pr-0 pl-0">
                    <div class="row no-gutters align-items-center w-100">
                        <div class="col font-weight-bold pl-3">@Html.DisplayNameFor(model => model.ThreadName)</div>
                        <div class="d-none d-md-block col-6 text-muted">
                            <div class="row no-gutters align-items-center">
                                <div class="col-3"></div>
                                @*<div class="col-3">Replies</div>
                                    <div class="col-6">Last update</div>*@
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="card-body py-3">
                        <div class="row no-gutters align-items-center">
                            <div class="col"><a asp-action="Index" asp-controller="Post" asp-route-id="@item.Id" class="text-big font-weight-semibold" data-abc="true">@item.ThreadName</a></div>
                            <div class="d-none d-md-block col-6">
                                <div class="row no-gutters align-items-center">
                                    <div class="col-3">
                                        @if (User.IsInRole("Admin"))
                                        {

                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="m-0">
                }
            </div>
        </div>
    </div>
</div>
