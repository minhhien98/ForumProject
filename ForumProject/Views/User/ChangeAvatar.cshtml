@model ForumProject.Models.ViewModel.User.ChangeAvatarViewModel

@{
    ViewData["Title"] = "ChangeAvatar";
}

<h1>Change Avatar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeAvatar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="file" asp-for="AvatarImage" class="form-control" />
                <span asp-validation-for="AvatarImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

