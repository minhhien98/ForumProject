@model ForumProject.Models.ViewModel.User.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="d-flex h-100">
    <div class="m-auto">
        <h1>Change password</h1>
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a class="btn btn-light" href="@Url.Action("Index","Home")">Back</a>
            </div>
        </form>
    </div>
</div>

